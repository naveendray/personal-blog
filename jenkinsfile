pipeline {
    agent any
 
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
 
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('naveendra/react-blog', '-f dockerfile .')
                }
            }
        }
 
        stage('Run Container') {
            steps {
                script {
                    docker.image('naveendra/react-blog').run('-p 3000:3000')
                }
            }
        }
    }
}
